<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/itemRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_item_normal"
    android:focusable="true"
    >

    <View
        android:id="@+id/itemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_black_gradient_reverse"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/itemLogoView"
        android:layout_width="@dimen/height_list_item_normal"
        android:layout_height="@dimen/height_list_item_normal"
        android:layout_centerVertical="true"
        android:padding="@dimen/tv_category_list_logo_padding"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/itemTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/itemLogoView"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingEnd="4dp"
        android:paddingStart="2dp"
        android:textColor="@android:color/white"
        tools:text="Entertainment Category"
        android:textSize="18sp"
        />

</RelativeLayout>