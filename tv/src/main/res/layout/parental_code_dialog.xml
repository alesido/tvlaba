<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/appColorPrimaryDark"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:text="@string/parental_code_dialog_title"
        android:textStyle="bold"
        android:textSize="@dimen/parental_code_dialog_title_size"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parental_code_dialog_new_code"
            android:textSize="@dimen/parental_code_dialog_text_size"
            />

        <EditText
            android:id="@+id/newCodeEdit"
            android:layout_width="@dimen/parental_code_dialog_input_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/parental_code_dialog_edit_text_size"
            android:background="@drawable/background_input"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:imeOptions="actionNext"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parental_code_dialog_new_code_confirm"
            android:textSize="@dimen/parental_code_dialog_text_size"
            />

        <EditText
            android:id="@+id/newCodeConfirmEdit"
            android:layout_width="@dimen/parental_code_dialog_input_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/parental_code_dialog_edit_text_size"
            android:background="@drawable/background_input"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:imeOptions="actionNext"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parental_code_dialog_old_code"
            android:textSize="@dimen/parental_code_dialog_text_size"
            />

        <EditText
            android:id="@+id/oldCodeEdit"
            android:layout_width="@dimen/parental_code_dialog_input_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/parental_code_dialog_edit_text_size"
            android:background="@drawable/background_input"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:imeOptions="actionNext"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:layout_weight="50"
            android:textAllCaps="true"
            android:textSize="@dimen/parental_code_dialog_edit_text_size"
            android:textColor="@android:color/white"
            android:text="@string/dialog_button_text_ok"
            android:background="@drawable/background_button"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:layout_weight="50"
            android:layout_marginEnd="8dp"
            android:text="@string/dialog_button_text_cancel"
            android:textAllCaps="true"
            android:textSize="@dimen/parental_code_dialog_button_text_size"
            android:textColor="@android:color/white"
            android:background="@drawable/background_button"
            />
    </LinearLayout>

</LinearLayout>