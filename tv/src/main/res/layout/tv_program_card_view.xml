<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="?attr/credits_card_width"
    android:layout_height="?attr/credits_card_height"
    >
    <ImageView
        android:id="@+id/tvProgramCardPoster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvProgramCardFooter"
        android:contentDescription="@string/content_description_tv_program_card_poster"
        />
    <View
        android:id="@+id/tvProgramCardFooter"
        android:layout_width="match_parent"
        android:layout_height="?attr/credits_card_footer_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/lb_basic_card_bg_color"
        />
    <TextView
        android:id="@+id/tvProgramCardTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvProgramCardFooter"
        android:gravity="top"
        android:textSize="?attr/text_large"
        android:textStyle="bold"
        tools:text="21:00 - 22:30"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@drawable/background_gradient_4m_top"
        />
    <TextView
        android:id="@+id/tvProgramCardProgramTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProgramCardTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"
        android:textSize="?attr/text_medium"
        android:ellipsize="end"
        tools:text="12:00 - 15:00 Last news we have at the moment. Come and see!"
        />
</androidx.constraintlayout.widget.ConstraintLayout>