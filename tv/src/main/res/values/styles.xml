<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Leanback">
        <!--item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="playbackControlsAutoHideTickleTimeout">10000</item-->

        <item name="android:scrollbars">none</item><!-- Leanback Preferences NPE fix! -->
    </style>

    <style name="AppTheme.FullScreenDialog" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- Themes for text size modes. -->

    <style name="Theme.Small" parent="AppTheme">
        <item name="text_tiny">12sp</item>
        <item name="text_small">15sp</item>
        <item name="text_medium">14sp</item>
        <item name="text_large">22sp</item>
        <item name="text_huge">32sp</item>
        <item name="card_width">200dp</item>
        <item name="card_height">288dp</item>
        <item name="footer_height">74dp</item>
    </style>

    <style name="Theme.Medium" parent="AppTheme">
        <item name="text_tiny">15sp</item>
        <item name="text_small">18sp</item>
        <item name="text_medium">23sp</item>
        <item name="text_large">27sp</item>
        <item name="text_huge">38sp</item>
        <item name="card_width">280dp</item>
        <item name="card_height">400dp</item>
        <item name="footer_height">102dp</item>
    </style>

    <style name="Theme.Large" parent="AppTheme">
        <item name="text_tiny">18sp</item>
        <item name="text_small">22sp</item>
        <item name="text_medium">28sp</item>
        <item name="text_large">32sp</item>
        <item name="text_huge">44sp</item>
        <item name="card_width">336dp</item>
        <item name="card_height">480dp</item>
        <item name="footer_height">122dp</item>
    </style>

    <style name="TvProgramDetailsBannerText">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">?attr/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VodItemBannerText">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">?attr/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
